<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Menu"
            android:textColor="#000000"
            android:textSize="56sp"
            app:fontFamily="cursive" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Appetizers"
                android:textColor="#000000"
                android:textSize="32sp"
                app:fontFamily="sans-serif-black" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowSpan="3"
                    android:layout_height="100dp"
                    android:layout_width = "100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/dishOne"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="@string/dishname1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/descriptionOne"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Fries that you have never tried"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceOne"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$4.99"
                    android:textSize="18sp" />


            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/Pancakes.jpg" />

                <TextView
                    android:id="@+id/dishTwo"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Pancake"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/descriptionTwo"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Made with organic milk. No sugar and egg."
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceTwo"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="@string/dishprice2"
                    android:textSize="18sp" />


            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Chef Special"
                android:textColor="#000000"
                android:textSize="32sp"
                app:fontFamily="sans-serif-black" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowSpan="3"
                    android:layout_height="100dp"
                    android:layout_width = "100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/dishThree"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="California Roll"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/descriptionThree"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Cucumber, crab or imitation crab, and avocado"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceThree"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$12.99"
                    android:textSize="18sp" />


            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowSpan="3"
                    android:layout_height="100dp"
                    android:layout_width = "100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/dishFour"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Ramen"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/descriptionFour"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Just Ramen with Japanese soy sauce"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceFour"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$11.99"
                    android:textSize="18sp" />


            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
