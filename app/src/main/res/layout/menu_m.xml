<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Menu"
            android:textColor="#000000"
            android:textSize="56sp"
            app:fontFamily="cursive" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Sandwiches and Meals"
                android:textColor="#000000"
                android:textSize="32sp"
                app:fontFamily="sans-serif-black" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/buttermilk" />
                <TextView
                    android:id="@+id/dishOne"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Crispy Buttermilk Sandwich"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/descriptionOne"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Buttermilk chicken, soft buns, and pickles"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/priceOne"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$5.19"
                    android:textSize="18sp" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bacon" />
                <TextView
                    android:id="@+id/dishTwo"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Bacon Big Mac"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/descriptionTwo"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Double bacon, cheddar cheese and lettuce"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/priceTwo"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$6.08"
                    android:textSize="18sp" />
            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:text="Fries, Sides and More"
                android:textColor="#000000"
                android:textSize="32sp"
                app:fontFamily="sans-serif-black" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fries" />
                <TextView
                    android:id="@+id/dishThree"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="French Fries"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/descriptionThree"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="The golden potatoes that you can choose size"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/priceThree"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$2.19"
                    android:textSize="18sp" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yogart" />
                <TextView
                    android:id="@+id/dishFour"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Fruit and Yogurt Parfait"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/descriptionFour"
                    android:layout_width="250dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:text="Fresh strawberries, yogurt and oatmeals."
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/priceFour"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="$1.49"
                    android:textSize="18sp" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>