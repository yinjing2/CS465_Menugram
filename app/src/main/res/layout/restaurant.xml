<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/horizontal_margin">


        <ImageView
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:src="@drawable/mcdonalds"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="McDonalds"
                android:textSize="32dp"
                android:layout_marginTop="25sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/star"></ImageView>

                <TextView
                    android:layout_width="133dp"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:text="3.8"
                    android:textSize="20dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="501 Green Street"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp" />

    <TextView
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burgers, Fries and More"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:columnCount="4"
        android:rowCount="4"
        android:scrollbars="vertical">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m3" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m6" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m8" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m10" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m11" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m12" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m13" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m14" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m15" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:src="@drawable/m16" />

        <ImageButton
            android:id="@+id/threeDotImage"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/cardview_light_background"
            android:padding="0dp"
            android:src="@drawable/ic_ellipses" />
    </GridLayout>

    <ImageButton
        android:id= "@+id/camera"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/camera"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        android:background="@color/cardview_light_background"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <include layout="@layout/layout_bottom_navigation_view" />

    </RelativeLayout>
</LinearLayout>