<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/main_layout">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/horizontal_margin">


        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="112dp"
            android:layout_height="110dp"
            android:src="@drawable/mcdonalds"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/restaurantTextView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="McDonalds"
                android:textSize="32dp"
                android:layout_marginTop="25sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/star"></ImageView>

                <TextView
                    android:layout_width="133dp"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:text="3.8"
                    android:id="@+id/ratingTextView"
                    android:textSize="20dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/addressTextView"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="501 Green Street"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tagTextView"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burgers, Fries and More"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:columnCount="4"
        android:rowCount="4"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:background="@drawable/image_border"
            android:scaleType="fitXY"
          />


        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
             />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
           />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
     />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
         />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
           />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
          />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
         />

        <ImageView
            android:id="@+id/img13"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
       />

        <ImageView
            android:id="@+id/img14"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"

             />

        <ImageView
            android:id="@+id/img15"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/img16"
            android:layout_row="3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"
             />
    </GridLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Slide left for Menu"
        android:textSize="18sp"
      ></TextView>


    <ImageButton
        android:id= "@+id/camera"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/camera"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        android:background="@color/cardview_light_background"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <include layout="@layout/layout_bottom_navigation_view" />

    </RelativeLayout>
</LinearLayout>