<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/main_layout">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/horizontal_margin">


        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="20dp"
            android:paddingTop="10dp"
            android:src="@drawable/mcdonalds" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/restaurantTextView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:text="McDonalds"
                android:textSize="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/star"></ImageView>

                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="133dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="3.8"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/address" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:inputType="none"
            android:text="501 Green Street"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/description" />

        <TextView
            android:id="@+id/tagTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:inputType="none"
            android:text="Burgers, Fries and More"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/grey"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:columnCount="4"
        android:rowCount="4"
        android:scrollbars="vertical"
        android:useDefaultMargins="true">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/image_border"
            android:padding="0dp"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img13"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img14"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY"

            />

        <ImageView
            android:id="@+id/img15"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img16"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:scaleType="fitXY" />
    </GridLayout>


    <ImageButton
        android:id="@+id/camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/cardview_light_background"
        android:scaleType="fitCenter"
        android:src="@drawable/camera"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <include layout="@layout/layout_bottom_navigation_view" />

    </RelativeLayout>
</LinearLayout>